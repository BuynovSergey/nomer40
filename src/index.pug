    body 
        .h-top-line
            .main 
                .logo 
                    img(src='images/logo.jpg')
                .h-info 
                    .h-reg 
                        a(href="#") Регистрация
                        a(href="#") Вход 
                    .h-info-soc 
                        a(href="#")
                            +svg('vk') 
                        a(href="#")
